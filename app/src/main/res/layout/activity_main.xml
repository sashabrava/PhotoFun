<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cels.photofun.MainActivity">

    <Button
            android:text="Take pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTakePic"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:text="Segmentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSetSegmentation"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonTakePic" android:layout_toEndOf="@+id/buttonTakePic"/>
    <Button
            android:text="Load pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonLoad" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginRight="0dp" android:layout_marginEnd="0dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@android:color/transparent"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:max="15"
            android:progress="1"
            android:layout_below="@+id/buttonTakePic" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
