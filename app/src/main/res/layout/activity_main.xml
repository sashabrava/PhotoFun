<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cels.photofun.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.cels.photofun.TableRowExtended
                android:id="@+id/panelTopPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonChangePhotoFragment"
                    android:onClick="onClickPhoto"/>
            <Button
                    android:text="@string/take_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/buttonTakePic"
                    android:onClick="onClickPhoto"/>
            <Button
                    android:text="@string/segment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:id="@+id/buttonSegmentPhoto"
                    android:onClick="onClickPhoto"
            />
            <Button
                    android:text="@string/load_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:id="@+id/buttonLoadPic"
                    android:onClick="onClickPhoto"
            />
            <Button
                    android:text="@string/save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/buttonSavePhoto"
                    android:onClick="onClickPhoto"/>
        </com.cels.photofun.TableRowExtended>
        <com.cels.photofun.TableRowExtended
                android:id="@+id/panelTopVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonChangeVideoFragment"
                    android:onClick="onClickVideo"/>
            <Button
                    android:text="Take video"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/buttonTakeVideo"
                    android:onClick="onClickVideo"/>
            <Button
                    android:text="@string/segment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:id="@+id/buttonSegmentVideo"
                    android:onClick="onClickVideo"
            />
            <Button
                    android:text="@string/load_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:id="@+id/buttonLoadVideo"
                    android:onClick="onClickVideo"
            />
            <Button
                    android:text="@string/save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/buttonSaveVideo"
                    android:onClick="onClickVideo"/>
        </com.cels.photofun.TableRowExtended>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Amount of clusters: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"/>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar2"
                    android:max="15"
                    android:progress="1"
                    android:layout_below="@+id/buttonTakePic" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/picTableRow">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/frameLayout">

            </FrameLayout>
        </TableRow>
    </LinearLayout>
</RelativeLayout>
